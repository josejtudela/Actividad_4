<section id="destinos" class="container">
    <div class="containerCSSGrid">
      {{#each destinos}}
          <div class="item item{{@index}}">
              <img src="images/{{img}}" class="img-fluid" alt="Madrid">
              <p class="titleFigureGrid">Save {{reserve}}$ pay only</p>
              <p class="bg-warning priceGrid">
                <strong>{{price}}$</strong>
              </p>
              <p class="text-center">
                <strong>{{name}}</strong>
              </p>
            </div>
      {{/each}}
    </div>

<div id="carouselDestinos">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        {{#each destinos}}
          <div class="carousel-item">
            <img src="images/{{img}}" class="img-fluid" alt="Madrid">
            <p class="titleFigureGrid">Save {{reserve}}$ pay only</p>
            <p class="bg-warning priceGrid">
              <strong>{{price}}$</strong>
            </p>
            <p class="text-center">
              <strong>{{name}}</strong>
            </p>
          </div>
        {{/each}}
        <script>
          document.querySelectorAll('.carousel-item')[0].classList.add("active");
        </script>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</section>